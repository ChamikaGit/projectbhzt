<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e8e1ed"
    android:id="@+id/idlinearoutside"
    tools:context="com.fidenz.chami.dev.bhooztapp.activities.AdminActvities.GrandprizeActivity">

    <include layout="@layout/toolbar_advertisemnts" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/idrelgrandprice">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        app:cardElevation="7dp"
        android:padding="5dp"
        app:cardBackgroundColor="#e8e1ed"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp">

                <TextView
                    android:id="@+id/idheader"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:text="Grand Prize Text"
                    android:textColor="#424141"
                    android:textSize="15dp" />



                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    app:cardElevation="7dp"
                    android:layout_alignParentTop="true"
                    android:layout_toRightOf="@+id/idheader"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="0dp">

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:id="@+id/idetgrandprizetext"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:hint="Enter Grand Prize Text "
                        android:background="@drawable/edittext_border"
                        android:gravity="top" />

                </android.support.v7.widget.CardView>


            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="20dp">

                <Button
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/rounded_button_transparent"
                    android:text="Save"
                    android:id="@+id/idbtnsave"
                    android:textColor="@android:color/white" />

            </RelativeLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

    </RelativeLayout>

</LinearLayout>
