<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <include layout="@layout/toolbar_game"/>

    <!--<include layout="@layout/tickertextlayout"/>-->

    <include layout="@layout/marqueeayout" />



    <LinearLayout
        android:id="@+id/act_game_pieceholder"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:background="#4a434d"
        android:padding="5dp"
        android:paddingLeft="15dp"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/act_game_puzzelholder"
        android:layout_weight="7"
        android:background="@android:color/white"
        android:orientation="vertical">


        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_1"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bhoozt1">
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_2"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault">

                </LinearLayout>
                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_3"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bhoozt3">
                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_4"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_5"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/bhoozt5"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_6"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault"
                    ></LinearLayout>

            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_7"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_8"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault"
                    ></LinearLayout>
                <LinearLayout
                    android:id="@+id/act_game_puzzelholder_9"
                    android:layout_width="70dp"
                    android:orientation="horizontal"
                    android:layout_margin="3dp"
                    android:layout_height="70dp"
                    android:background="@drawable/gamepicedefault"
                    ></LinearLayout>

            </TableRow>



        </TableLayout>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/advertistmnetlayout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/idscore"
        android:weightSum="4"
        android:layout_below="@+id/idadcard"
        android:background="@android:color/white"
        xmlns:android="http://schemas.android.com/apk/res/android">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 Coins"
            android:id="@+id/idpointcount"
            android:textSize="12sp"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textColor="#a87ec3"
            />
        <TextView
            android:id="@+id/idgrandpricetext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grand prize 500"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:textColor="#a87ec3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 days left"
            android:textColor="#a87ec3"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3/9"
            android:id="@+id/idremainpices"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_textbackground"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:layout_margin="10dp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#a87ec3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">


                <TextView
                    android:id="@+id/idcointcoutfull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="1200"
                    android:textSize="@dimen/coincountfull"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idcointcoutfull"
                    android:layout_centerHorizontal="true"
                    android:text="- COINS -"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/cointext" />


            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>




</LinearLayout>

