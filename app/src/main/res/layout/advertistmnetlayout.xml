<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/secondlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:id="@+id/idadcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="#eee9f1"
        android:layout_alignParentTop="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="15dp">


            <LinearLayout
                android:id="@+id/idadview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/homeadheader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:text="This is the World cup -Scarcth and win"
                    android:textColor="#885f99"
                    android:textSize="15dp"
                     />


                <TextView
                    android:id="@+id/homeaddbody"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Coca-Cola,Open Happiness"
                    android:textColor="#885f99"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/homeaddlink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Lean more about Bhoozt here."
                    android:textColor="#885f99"
                    android:textSize="15dp"
                    android:textStyle="bold" />


            </LinearLayout>


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
