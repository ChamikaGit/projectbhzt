<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/idadview">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/idadheader"
                    android:gravity="center"
                    android:textSize="14dp"
                    android:textColor="#885f99"
                    android:text="This is the World cup -Scarcth and win"/>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:gravity="center"
                    android:id="@+id/idaddbody"
                    android:textColor="#885f99"
                    android:text="Coca-Cola,Open Happiness"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:id="@+id/idaddlinkname"
                    android:gravity="center"
                    android:textColor="#885f99"
                    android:textStyle="bold"
                    android:text="@string/my_text"/>


            </LinearLayout>


            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/idedit"
                android:src="@drawable/etimage"
                android:layout_margin="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"/>



        </RelativeLayout>

    </android.support.v7.widget.CardView>



</RelativeLayout>