<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/toolbar_winandtryagain" />


    </LinearLayout>

    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content">-->

        <!--<include layout="@layout/tickertextlayout" />-->

    <!--</LinearLayout>-->

    <include layout="@layout/marqueeayout" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:id="@+id/idlintry">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/idcongatstext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:gravity="center"
                    android:text="Congratulation you won the game.Congratulation you won the game."
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/wintryagaintextsize" />

                <ImageView
                    android:id="@+id/idimgtry"
                    android:layout_width="@dimen/wintryagainimagewidth"
                    android:layout_height="@dimen/wintryaginhight"
                    android:layout_below="@+id/idcongatstext"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/play" />


            </RelativeLayout>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <include layout="@layout/advertistmnetlayout" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:background="#a87ec3">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center">


                <TextView
                    android:id="@+id/idcointcoutfull"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="1200"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/coincountfull"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/idcointcoutfull"
                    android:layout_centerHorizontal="true"
                    android:text="- COINS -"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/cointext" />


            </RelativeLayout>


        </RelativeLayout>
    </LinearLayout>


</LinearLayout>